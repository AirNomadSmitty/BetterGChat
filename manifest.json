{
	"name"       : "Better GChat",
	"description": "BTTV Emotes in GChat",
	"version"    : "1.4",
	"manifest_version": 2,
	"options_ui" : {
		"page": "src/options/options.html",
		"open_in_tab": false
	},
	"content_scripts": [
		{
			"matches": ["https://hangouts.google.com/*"],
			"js"     : ["bgchat.js"],
			"all_frames" : true
		}
	],
	"background": {
		"scripts": ["src/background.js"]
	},
	"web_accessible_resources": [
		"src/*"
	],
	"permissions": [
		"storage"
	]
  
}
