{
	"name"       : "Better GChat",
	"description": "BTTV Emotes in GChat",
	"version"    : "0.5",
	"manifest_version": 2,

	"content_scripts": [
		{
			"matches": ["https://hangouts.google.com/*"],
			"js"     : ["bgchat.js"]
		}
	],
	"permissions": [
    	"*://api.betterttv.net/*",
    	"*://cdn.betterttv.net/*"
	]
}
