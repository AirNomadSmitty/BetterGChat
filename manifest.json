{
	"name"       : "Better GChat",
	"description": "BTTV Emotes in GChat",
	"version"    : "1.2",
	"manifest_version": 2,

	"content_scripts": [
		{
			"matches": ["https://hangouts.google.com/*"],
			"js"     : ["bgchat.js"],
			"all_frames" : true
		}
	],
	"web_accessible_resources": [
		"src/*",
		"config.js"
	]
  
}
